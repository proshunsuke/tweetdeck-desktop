{
  "name": "tweetdeck-desktop",
  "productName": "Tweetdeck",
  "desktopName": "Tweetdeck",
  "version": "1.0.0",
  "description": "Unofficial Tweetdeck desktop app",
  "license": "MIT",
  "repository": "mikebell/tweetdeck-desktop",
  "author": {
    "name": "Mike Bell",
    "email": "hello@mikebell.io",
    "url": "http://mikebell.io"
  },
  "engines": {
    "node": ">=4"
  },
  "electronVersion": "0.34.3",
  "scripts": {
    "test": "xo --space",
    "start": "electron .",
    "build": "npm run build:macos && npm run build:linux && npm run build:windows",
    "build:linux": "electron-packager . --overwrite --out=dist --ignore='^media$' --prune --platform=linux --arch=x64 --icon=static/Icon.png --app-bundle-id=com.mikebell.Tweetdeck-desktop --app-version=$npm_package_version && cd dist/Tweetdeck-linux-x64/ && zip -ryq9 ../Tweetdeck-linux-${npm_package_version}.zip *",
    "build:windows": "electron-packager . --overwrite --asar --out=dist --ignore='^media$' --prune --platform=win32 --arch=ia32 --icon=static/Icon.ico --version-string.ProductName=$npm_package_productName --app-version=$npm_package_version && cd dist/Tweetdeck-win32-ia32 && zip -ryq9 ../Tweetdeck-windows-${npm_package_version}.zip *"
  },
  "files": [
    "index.js",
    "browser.js",
    "browser.css",
    "static/Icon.icns",
    "static/Icon.png",
    "static/Icon.ico"
  ],
  "keywords": [
    "electron-app",
    "Tweetdeck"
  ],
  "dependencies": {
    "electron-config": "^0.1.1",
    "electron-context-menu": "^0.1.0",
    "electron-debug": "^1.0.0",
    "electron-dl": "^1.0.0"
  },
  "devDependencies": {
    "electron-packager": "^8.0.0",
    "electron": "^1.0.1",
    "xo": "*"
  },
  "xo": {
    "esnext": true,
    "envs": [
      "node",
      "browser"
    ],
    "rules": {
      "import/no-extraneous-dependencies": 0
    }
  }
}
